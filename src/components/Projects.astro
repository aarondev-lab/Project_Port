---
// src/components/Projects.astro

const projects = [
  {
    title: 'Banco Digital',
    description: 'Proyecto completo de simulación bancaria con autenticación, transacciones y panel de usuario. Desarrollado con Symfony, MySQL y Tailwind.',
    repo: 'https://github.com/tuusuario/banco-digital',
  },
  {
    title: 'Analizador de logs (Python)',
    description: 'Script en Python para analizar logs de servidor y detectar patrones de ataque. Proyecto personal para aprender sobre forense.',
    repo: 'https://github.com/tuusuario/log-analyzer',
  },
  {
    title: 'Portfolio personal',
    description: 'Este mismo portfolio, construido con Astro y Tailwind. Diseño limpio, animaciones suaves y completamente responsive.',
    repo: 'https://github.com/tuusuario/portfolio-astro',
  },
];
---

<section id="projects" class="py-20 px-6 bg-black/5">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-4xl font-bold mb-12">Proyectos</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <article class="bg-cream border border-black/10 rounded-xl p-6 shadow-sm hover:shadow-md transition-all hover:-translate-y-1">
          <h3 class="text-2xl font-semibold mb-2">{project.title}</h3>
          <p class="text-black/70 mb-4">{project.description}</p>
          <a
            href={project.repo}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-black font-medium hover:underline"
          >
            Ver en GitHub
