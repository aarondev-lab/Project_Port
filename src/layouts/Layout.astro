---
// Importamos el CSS global desde la carpeta styles
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Aarón García Sánchez</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:opsz@14..32&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />
    <!-- Script para eliminar el hash antes del scroll automático -->
    <script>
      if (window.location.hash) {
        history.replaceState(null, '', window.location.pathname + window.location.search);
      }
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }
    </script>
  </head>
  <body>
    <slot />
    <!-- Script adicional para forzar scroll al inicio al cargar -->
    <script>
      window.addEventListener('load', () => {
        window.scrollTo(0, 0);
      });
    </script>
  </body>
</html>